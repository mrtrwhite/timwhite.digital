{% case response.type  %}
{% when "comment" %}
  <div class="response">
    <div class="comment">
      {{ response.body }}
    </div>
    <div class="byline">
      by {{ response.display_name }}
      <span class="time-ago">{{ response.created_at | relative_date }}</span>
    </div>
  </div>
{% when "upvote" %}
  {% unless response.anon? %}
    <div class="response">
      <div class="upvote">
        {{ response.display_name }} upvoted this post.
      </div>
    </div>
  {% endunless %}
{% endcase %}
